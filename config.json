{
  "name": "json",
  "viewName": "Kaholo JSON Plugin",
  "type": "executer",
  "main": "app.js",
  "execProgram": "node",
  "exposeRoute": false,
  "imgUrl": "logo.png",
  "version": "0.0.1",
  "description": "Kaholo plugin used to process JSON files.",
  "category": [
    "Basic Tools"
  ],
  "keywords": [
    "json",
    "file",
    "files",
    "read",
    "write",
    "parse"
  ],
  "methods": [
    {
      "name": "readJsonFile",
      "viewName": "Read JSON file",
      "params": [
        {
          "name": "filePath",
          "viewName": "File path",
          "type": "string",
          "required": true,
          "description": "The file to get the JSON object from"
        }
      ]
    }, {
      "name": "writeJsonFile",
      "viewName": "Write JSON file",
      "params": [
        {
          "name": "filePath",
          "viewName": "File path",
          "type": "string",
          "required": true,
          "description": "The file to store the JSON object at"
        },
        {
          "name": "json",
          "viewName": "JSON",
          "type": "text",
          "parserType": "object",
          "required": true,
          "description": "String representing the JSON object to store"
        }
      ]
    }
  ]
}
